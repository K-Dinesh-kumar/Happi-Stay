<% layout("/layouts/boilerplate") %>

    <body>
        <form action="/listings" method="post" class="needs-validation" enctype="multipart/form-data"  novalidate>
            <div class="container row listing-form">
                <div class="col-8 offset-2">
                    <h3>Create New Listing</h3>
                    <div class="mb-3 ">
                        <label for="title" class="form-label">Title : </label><br>
                        <input type="text" name="listing[title]" id="title" class="form-control"
                            placeholder="Add a title" required>
                        <div class="invalid-feedback">
                            Please enter a title
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description : </label><br>
                        <textarea name="listing[description]" id="description" required class="form-control"></textarea>
                        <div class="invalid-feedback">
                            Please enter a description
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="category" class="form-label">Category : </label><br>
                    <select class="form-select" name="listing[category]"  id="category">
                        <option value="Trending" selected>Trending</option>
                        <option value="Farms">Farms</option>
                        <option value="Rooms">Rooms</option>
                        <option value="Iconic cities">Iconic cities</option>
                        <option value="Pools">Pools</option>
                        <option value="Camping">Camping</option>
                        <option value="Ships">Ships</option>
                        <option value="Arctic">Arctic</option>
                        <option value="Beach">Beach</option>
                        <option value="Castles">Castles</option>
                        <option value="Caves">Caves</option>
                      </select>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Listing Image: </label><br>
                        <div class="input-group">
                        <input type="file" name="listing[image]" id="image" class="form-control"
                            ></div>
                    </div><br>

                    <div class="row">
                        <div class="mb-3 col-md-4 ">
                            <label for="price" class="form-label" >Price : </label><br>
                            <div class="input-group">
                                <span class="input-group-text"> &#8377;</span>
                                <input type="text" name="listing[price]" required id="price" class="form-control"
                                    placeholder="1000">
                                    <div class="invalid-feedback">
                                        Please enter a price
                                    </div>
                            </div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country : </label><br>
                            <input type="text" name="listing[country]" id="country" required class="form-control"
                                placeholder="India">
                                <div class="invalid-feedback">
                                    Please enter a country
                                </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location : </label><br>
                        <input type="text" name="listing[location]" required id="location" class="form-control">
                        <div class="invalid-feedback">
                            Please enter a location
                        </div>
                    </div>
                    <button class="btn btn-outline-danger" >Add</button>
                </div>
            </div>
        </form>
    </body>
   